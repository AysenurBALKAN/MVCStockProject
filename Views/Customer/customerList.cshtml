@using MVCStok.Models.Entity
@model List<tbl_musteriler>
@{
    ViewBag.Title = "customerList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>customerList</h2>
<table id="tbl1" class="table table-hover">
    <thead>
        <tr>

            <th>Müşteri ID</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cstmr in Model)
        {
            <tr>
                <td>@cstmr.MusteriID</td>
                <td>@cstmr.MusteriAd</td>
                <td>@cstmr.MusteriSoyad</td>
                <td> @Html.ActionLink("Sil", "delete", new { id = cstmr.MusteriID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten Silmek İstiyormusunuz?')" })</td>
                <td><a href="/Customer/customer_getir/@cstmr.MusteriID" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Customer/Customer_new/" class="btn btn-success">Yeni Müşteri Ekle</a>

<script type="text/javascript" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script>
    $('#tbl1').DataTable();
</script>