@using MVCStok.Models.Entity
@model List<tbl_urunler>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>ProductList</h2>

<table id="tbl1" class="table table-hover">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok Miktarı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prdct in Model)
        {
        <tr>
            <td>@prdct.UrunID</td>
            <td>@prdct.UrunAd</td>
            <td>@prdct.Marka</td>
            <td>@prdct.tbl_kategoriler.KatwgoriAd</td>
            <td>@prdct.Fiyat</td>
            <td>@prdct.Stok</td>
            <td><a href="/Product/delete/@prdct.UrunID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/product_getir/@prdct.UrunID" class="btn btn-warning">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/Product/Product_new/" class="btn btn-success">Yeni Ürün Ekle</a>
<script type="text/javascript" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script>
    $('#tbl1').DataTable();
</script>