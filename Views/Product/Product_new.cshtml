@model MVCStok.Models.Entity.tbl_urunler
@{
    ViewBag.Title = "Product_new";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Product_new</h2>

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" />
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="Marka" />
    </div>
    <div>
        <label>Ürün Kategori</label>
       @Html.DropDownListFor(m=>m.tbl_kategoriler.KategoriID,(List<SelectListItem>)ViewBag.dgr,new { @class="form-control" })
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="Stok" />
    </div>
    <div style="margin-top:15px"><button class="btn btn-success">Ürün Ekle</button></div>

</form>


